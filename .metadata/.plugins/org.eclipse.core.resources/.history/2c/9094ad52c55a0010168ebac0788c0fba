<div class="container">
    <h2>Workout Journal</h2>
    <form id="journalForm">
        <label for="date">Date</label>
        <input type="date" id="date" required>

        <label for="type">Workout Type</label>
        <input type="text" id="type" placeholder="e.g. Chest, Cardio" required>

        <label for="duration">Duration (in minutes)</label>
        <input type="number" id="duration" required>

        <label for="notes">Notes</label>
        <textarea id="notes" rows="3" placeholder="Any observations or thoughts?"></textarea>

        <button type="submit">Add Entry</button>
    </form>

    <div class="entry" id="journalEntries">
        <h2>Your Entries</h2>
        <!-- Dynamic entries will appear here -->
    </div>
</div>

<script>
    const form = document.getElementById("journalForm");
    const journalEntries = document.getElementById("journalEntries");

    form.addEventListener("submit", function(e) {
        e.preventDefault();

        const date = document.getElementById("date").value;
        const type = document.getElementById("type").value;
        const duration = document.getElementById("duration").value;
        const notes = document.getElementById("notes").value;

        const entryDiv = document.createElement("div");
        entryDiv.classList.add("entry-item");
        entryDiv.innerHTML = `
            <h3>${date} - ${type}</h3>
            <p><strong>Duration:</strong> ${duration} minutes</p>
            <p><strong>Notes:</strong> ${notes}</p>
        `;

        journalEntries.appendChild(entryDiv);

        form.reset();
    });
</script>

