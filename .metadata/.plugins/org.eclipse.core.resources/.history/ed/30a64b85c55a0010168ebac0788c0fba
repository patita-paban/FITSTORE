    <h2>üìì Log Your Workout</h2>

    <form id="journalForm">
        <div class="form-grid">
            <input type="date" id="date" required placeholder="Date">
            <input type="text" id="type" placeholder="Workout Type (e.g., Legs)" required>
            <input type="number" id="duration" placeholder="Duration (in minutes)" required>
            <textarea id="notes" rows="3" placeholder="Workout Notes (optional)"></textarea>
        </div>
        <button type="submit">Add Workout</button>
    </form>

    <div class="entries" id="entryList">
        <h2>üìò Workout History</h2>
        <!-- Dynamic workout cards will go here -->
    </div>
